<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/collection/4625880/1600x900
);">
  <div class="container">
    <h1><%= @restaurant.name %></h1>
    <p>Address: <%= @restaurant.address %></p>
    <p>Category: <%= @restaurant.category %></p>
    <p>Category: <%= @restaurant.phone_number %></p>
  </div>
</div>
<div class="container">
  <h3>Reviews: </h3>
  <% @restaurant.reviews.each do |review| %>
    <div class="container" id="review">
      <p><%= review.content %></p>
      <p>Rating: <%= review.rating %><p>
    </div>
<!--     <%= link_to 'Remove Review', restaurant_path(review), method: :delete, data: {confirm: 'Are you sure you want to delete this review?'} %> -->
  <% end %>

  <div id="commands">
    <%= link_to 'Back', restaurants_path, class: "btn btn-primary"%>
    <%= link_to 'Add a Review', new_restaurant_review_path(@restaurant), class: "btn btn-primary"%>
  </div>
</div>
